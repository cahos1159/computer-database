<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>DashBoard</servlet-name>
    <servlet-class>com.excilys.cdb.controller.web.DashBoard</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddComputer</servlet-name>
    <servlet-class>com.excilys.cdb.controller.web.ComputerAdd</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DashBoard</servlet-name>
    <url-pattern>/cdb</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddComputer</servlet-name>
    <url-pattern>/cdb/computer-add</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>cdb</welcome-file>
  </welcome-file-list>
</web-app>